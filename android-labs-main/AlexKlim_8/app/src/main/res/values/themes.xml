<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AlexKlim_8" parent="Theme.Material3.Dark.NoActionBar" />
    <style name="Theme.AlexKlim_8" parent="Base.Theme.AlexKlim_8" />
    <style name="MyCustom" tools:ignore="PrivateResource">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyCustom.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyCustom.Button.Round" parent="MyCustom">
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>
    <style name="MyCustom.Text">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>